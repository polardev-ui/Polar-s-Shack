{
  "name": "polars-shack",
  "version": "2.0.0",
  "description": "Advanced web proxy and unblocked access portal with admin panel and maintenance mode",
  "main": "index.html",
  "scripts": {
    "start": "echo 'Starting Polar's Shack...' && python3 -m http.server 8080",
    "dev": "echo 'Starting development server...' && python3 -m http.server 3000",
    "build": "echo 'Building Polars Shack...' && mkdir -p dist && cp -r *.html *.js *.css soon/ Polar-s-Shack-main/ dist/ 2>/dev/null || true",
    "deploy": "./deploy.sh",
    "stop": "./deploy.sh stop",
    "restart": "./deploy.sh restart",
    "logs": "./deploy.sh logs",
    "status": "./deploy.sh status",
    "test": "echo 'No tests specified'"
  },
  "keywords": ["proxy", "unblock", "web-proxy", "games", "unblocked-games", "school-games", "unblocked-proxy"],
  "author": "Polar's Shack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/polardev-ui/Polar-s-Shack.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "cors": "^2.8.5",
    "@vercel/analytics": "latest"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}
